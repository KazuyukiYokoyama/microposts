<h1>follow</h1>
<br>
<% @user.following_users.each do |following_user| %>
    <div class="row">
      <div class="col-md-2"></div>
      <aside class="col-md-5">
        <section class="user_info">
         <h1>
          <%= gravatar_for following_user %>
          <%= following_user.name %>
         </h1>
        <span><%= link_to "view profile", following_user %></span>
         <br>
          <p><%= following_user.birthplace %></p>
          <p><%= following_user.introduction %></p>
         <br>
        </section>
      </aside>
      <div class="col-md-3">
        <%= render 'follow_form' if logged_in? %>
      </div>
      <div class ="col-md-2"></div>
    </div>
<% end %>